<% subtitle = nil if local_assigns[:subtitle].nil? %>
<section class="jumbotron text-center">
  <div class="container">
    <h1><%= titles[:title] %></h1>
    <% if titles[:subtitle] %>
      <p class="lead text-muted"><%= titles[:subtitle] %></p>
    <% end %>
    <p>
      <%= link_to add_link_name, add_link_path, class: "btn btn-primary my-2" %>
      <%= link_to 'Home', root_path, class: "btn btn-secondary my-2" %>
    </p>
  </div>
</section>